{
  "name": "@fast-os/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "//--- START ---": "Comandos para iniciar as aplicações",
    "start:mobile": "nx serve mobile",
    "start:server": "nx serve server",
    "//--- BUILD ---": "Comandos para buildar os projetos",
    "build:mobile": "nx build mobile",
    "build:server": "nx build server",
    "//--- TEST ---": "Comandos para rodar os testes",
    "test": "npm run test:affected",
    "test:mobile": "nx test mobile --coverage && echo 'Disponível em : /coverage/mobile/lcov-report/index.html'",
    "test:server": "nx test server --coverage && echo 'Disponível em: server/build/reports/jacoco/test/html/index.html'",
    "test:all": "nx run-many -t test --coverage",
    "test:affected": "nx affected -t test --coverage",
    "//--- QUALITY ---": "Comandos para qualidade de código",
    "lint": "nx run-many -t lint",
    "lint:affected": "nx affected -t lint",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "//--- HELP ---": "Comandos de ajuda e automação",
    "prepare": "husky install"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.8.0",
    "@expo/cli": "~0.24.14",
    "@nx/eslint": "21.5.3",
    "@nx/eslint-plugin": "21.5.3",
    "@nx/expo": "21.5.3",
    "@nx/gradle": "21.5.3",
    "@nx/jest": "21.5.3",
    "@nx/js": "21.5.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/react-native": "~13.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "@types/react": "~19.0.10",
    "babel-jest": "^30.0.2",
    "babel-preset-expo": "~13.2.0",
    "eas-cli": "^16.19.3",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "husky": "^8.0.0",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jest-expo": "~53.0.7",
    "jest-util": "^30.0.2",
    "lint-staged": "^16.1.6",
    "metro-config": "~0.82.4",
    "metro-resolver": "~0.82.4",
    "nx": "21.5.3",
    "prettier": "^2.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "workspaces": [
    "packages/*",
    "mobile",
    "server"
  ],
  "dependencies": {
    "@expo/metro-config": "~0.20.14",
    "@expo/metro-runtime": "~5.0.4",
    "expo": "~53.0.10",
    "expo-secure-store": "~14.2.4",
    "expo-splash-screen": "~0.30.9",
    "expo-status-bar": "~2.2.3",
    "expo-system-ui": "~5.0.8",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.3",
    "react-native-svg": "~15.11.2",
    "react-native-svg-transformer": "~1.5.1",
    "react-native-web": "~0.20.0"
  },
  "lint-staged": {
    "{mobile,server,libs}/**/*.{ts,tsx,js,jsx}": [
      "npx nx affected --target=lint --uncommitted --fix=true",
      "npx prettier --write"
    ]
  }
}
